{
    "name": "express-typescript-api",
    "version": "1.0.0",
    "description": "",
    "main": "main.ts",
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "check-types": "tsc --pretty --noEmit",
        "check-format": "prettier --check .",
        "build:watch": "tsc --watch",
        "build:run": "nodemon dist/main.js",
        "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/main.ts",
        "prepare": "husky install",
        "start:dev": "yarn build && cross-env NODE_ENV=development concurrently \"yarn build:watch\" \"yarn build:run\"",
        "start:prod": "cross-env NODE_ENV=production node dist/main.js",
        "start": "cross-env NODE_ENV=development node dist/main.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@apidevtools/swagger-parser": "10.1.0",
        "@types/swagger-ui-express": "4.1.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cross-env": "7.0.3",
        "dotenv": "16.0.3",
        "express": "4.18.2",
        "express-async-errors": "^3.1.1",
        "inversify": "^6.0.1",
        "morgan": "1.10.0",
        "msw": "^1.2.1",
        "reflect-metadata": "0.1.13",
        "swagger-ui-express": "4.6.3",
        "winston": "3.8.2"
    },
    "devDependencies": {
        "@types/express": "4.17.17",
        "@types/jest": "^29.5.1",
        "@types/morgan": "1.9.4",
        "@types/node": "20.2.4",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "5.59.7",
        "@typescript-eslint/parser": "5.59.7",
        "concurrently": "8.0.1",
        "eslint": "8.41.0",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-prettier": "4.2.1",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "nodemon": "2.0.22",
        "prettier": "2.8.8",
        "rimraf": "5.0.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node": "10.9.1",
        "typescript": "5.0.4"
    }
